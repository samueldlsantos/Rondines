@{
    ViewBag.Title = "Editar Rondin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{
    <!-- DataTables -->
    <link href="~/assets/libs/datatables.net-bs4/css/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/libs/datatables.net-buttons-bs4/css/buttons.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <!-- Responsive datatable examples -->
    <link href="~/assets/libs/datatables.net-responsive-bs4/css/responsive.bootstrap4.min.css" rel="stylesheet" type="text/css" />
}
<div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">

                    <h4 class="card-title">Editar Rondín</h4>

                    <div class="row">
                        <div class="col">
                            <div>
                                <label class="form-label">Nombre</label>
                                <input class="form-control" type="text" placeholder="">
                            </div>
                        </div>
                    </div>

                    <div class="mt-3">
                        <label class="mb-1">Descripción</label>
                        <textarea id="textarea" class="form-control" maxlength="225" rows="4"
                                    placeholder="">
                        </textarea>
                    </div>

                    <div class="col-lg-6 mt-3">
                        <div>
                            <label class="form-label">Alcance</label>
                            <input class="form-control" type="text" placeholder="mts">
                        </div>
                    </div>

                    <h4 class="card-title mt-3">Puntos</h4>

                    <table id="datatable" class="table table-bordered dt-responsive  nowrap w-100">
                        <thead>
                            <tr>
                                <th>Orden</th>
                                <th>Descripción</th>
                                <th>Coordenadas</th>
                                <th>Acción</th>
                            </tr>
                        </thead>


                        <tbody>
                            <tr>
                                <td>01</td>
                                <td>Patio Trasero</td>
                                <td>123° 45 - 678° 90</td>
                                <td>
                                    <button type="button" 
                                            class="btn btn-link btn-rounded waves-effect"
                                            data-bs-toggle="modal" 
                                            data-bs-target="#editPoint">
                                        <i class="bx bx-edit-alt font-size-16 align-middle me-2"></i>
                                    </button>
                                    <button type="button" class="btn btn-link btn-rounded waves-effect">
                                        <i class="bx bxs-trash-alt font-size-16 align-middle me-2"></i>
                                    </button>
                                </td>
                            </tr>
                            <tr>
                                <td>02</td>
                                <td>Patio Principal</td>
                                <td>098° 76 - 543° 21</td>
                                <td>
                                    <button type="button" 
                                            class="btn btn-link btn-rounded waves-effect"
                                            data-bs-toggle="modal" 
                                            data-bs-target="#editPoint">
                                        <i class="bx bx-edit-alt font-size-16 align-middle me-2"></i>
                                    </button>
                                    <button type="button" class="btn btn-link btn-rounded waves-effect">
                                        <i class="bx bxs-trash-alt font-size-16 align-middle me-2"></i>
                                    </button>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    @await Html.PartialAsync("~/Views/Rondines/FormEditPoint.cshtml")
               
                </div><!-- end card-body -->
            </div> <!-- end card -->
        </div> <!-- end col -->
    </div><!-- end row -->

    <div class="d-flex flex-wrap gap-2 justify-content-end mt-1">
        <button 
        type="button" 
        class="btn btn-primary waves-effect waves-light w-md"
        data-bs-toggle="modal" 
        data-bs-target="#addPoint">
            Agregar punto
        </button>
        <button type="button" class="btn btn-danger waves-effect waves-light w-md">
            Cancelar
        </button>
        <button type="button" class="btn btn-primary waves-effect waves-light w-md">
            Aceptar
        </button>

            @await Html.PartialAsync("~/Views/Rondines/FormAddPoint.cshtml")

    </div>

    <!-- JAVASCRIPT -->
<script src="~/assets/libs/jquery/jquery.min.js"></script>
<script src="~/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/assets/libs/metismenu/metisMenu.min.js"></script>
<script src="~/assets/libs/simplebar/simplebar.min.js"></script>
<script src="~/assets/libs/node-waves/waves.min.js"></script>

<!-- Required datatable js -->
<script src="~/assets/libs/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="~/assets/libs/datatables.net-bs4/js/dataTables.bootstrap4.min.js"></script>
<!-- Buttons examples -->
<script src="~/assets/libs/datatables.net-buttons/js/dataTables.buttons.min.js"></script>
<script src="~/assets/libs/datatables.net-buttons-bs4/js/buttons.bootstrap4.min.js"></script>

<!-- Datatable init js -->
<script src="~/assets/js/pages/datatables.init.js"></script>

<script src="~/assets/js/app.js"></script>



