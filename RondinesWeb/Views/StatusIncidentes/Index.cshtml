@{
    ViewBag.Title = "Estatus de incidentes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{
    <!-- DataTables -->
    <link href="~/assets/libs/datatables.net-bs4/css/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/libs/datatables.net-buttons-bs4/css/buttons.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <!-- Responsive datatable examples -->
    <link href="~/assets/libs/datatables.net-responsive-bs4/css/responsive.bootstrap4.min.css" rel="stylesheet" type="text/css" />
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">

                <h4 class="card-title">Listado de estatus incidentes</h4>

                <table id="datatable" class="table table-bordered dt-responsive  nowrap w-100">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Descripción</th>
                            <th>Acción</th>
                        </tr>
                    </thead>


                    <tbody>
                        <tr>
                            <td>001</td>
                            <td>Abierto</td>
                            <td>
                                <button type="button" 
                                        class="btn btn-link btn-rounded waves-effect"
                                        data-bs-toggle="modal" 
                                        data-bs-target="#viewStatusIncidente">
                                    <i class="bx bx-show font-size-16 align-middle me-2"></i>
                                </button>
                                <button type="button" 
                                        class="btn btn-link btn-rounded waves-effect"
                                        data-bs-toggle="modal" 
                                        data-bs-target="#editStatusIncidente">
                                    <i class="bx bx-edit-alt font-size-16 align-middle me-2"></i>
                                </button>
                                <button type="button" class="btn btn-link btn-rounded waves-effect">
                                    <i class="bx bxs-trash-alt font-size-16 align-middle me-2"></i>
                                </button>
                            </td>
                        </tr>
                       <tr>
                            <td>002</td>
                            <td>Cerrado</td>
                            <td>
                                <button type="button" 
                                        class="btn btn-link btn-rounded waves-effect"
                                        data-bs-toggle="modal" 
                                        data-bs-target="#viewStatusIncidente">
                                    <i class="bx bx-show font-size-16 align-middle me-2"></i>
                                </button>
                                <button type="button" 
                                        class="btn btn-link btn-rounded waves-effect"
                                        data-bs-toggle="modal" 
                                        data-bs-target="#editStatusIncidente">
                                    <i class="bx bx-edit-alt font-size-16 align-middle me-2"></i>
                                </button>
                                <button type="button" class="btn btn-link btn-rounded waves-effect">
                                    <i class="bx bxs-trash-alt font-size-16 align-middle me-2"></i>
                                </button>
                            </td>
                        </tr><tr>
                            <td>003</td>
                            <td>Cancelado</td>
                            <td>
                                <button type="button" 
                                        class="btn btn-link btn-rounded waves-effect"
                                        data-bs-toggle="modal" 
                                        data-bs-target="#viewStatusIncidente">
                                    <i class="bx bx-show font-size-16 align-middle me-2"></i>
                                </button>
                                <button type="button" 
                                        class="btn btn-link btn-rounded waves-effect"
                                        data-bs-toggle="modal" 
                                        data-bs-target="#editStatusIncidente">
                                    <i class="bx bx-edit-alt font-size-16 align-middle me-2"></i>
                                </button>
                                <button type="button" class="btn btn-link btn-rounded waves-effect">
                                    <i class="bx bxs-trash-alt font-size-16 align-middle me-2"></i>
                                </button>
                            </td>
                        </tr>
                    </tbody>
                </table>

                @await Html.PartialAsync("~/Views/StatusIncidentes/FormViewStatusIncidente.cshtml")
                @await Html.PartialAsync("~/Views/StatusIncidentes/FormEditStatusIncidente.cshtml")

               
        </div>
    </div> <!-- end col -->
</div> <!-- end row -->
</div>

 <div class="d-flex flex-wrap gap-2 justify-content-end mt-1">
                    <button 
                    type="button" 
                    class="btn btn-primary waves-effect waves-light w-md"
                    data-bs-toggle="modal" 
                    data-bs-target="#addStatusIncidente">
                        Agregar
                    </button>
                    <button type="button" class="btn btn-danger waves-effect waves-light w-md">
                        Cancelar
                    </button>
                    <button type="button" class="btn btn-primary waves-effect waves-light w-md">
                       Aceptar
                    </button>

                     @await Html.PartialAsync("~/Views/StatusIncidentes/FormAddStatusIncidente.cshtml")

            </div>


